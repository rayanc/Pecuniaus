@model Pecuniaus.Collection.Models.LawyerModel
<div id="dvNewLawyer">
    @using (Ajax.BeginForm("AddLawyer", null, new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "dvNewLawyer",
        OnSuccess = "LawyerUpdated()",
    }, new { @class = "form-horizontal form-bordered", role = "form" }))
    {
        @Html.ValidationSummary()
         

        <div class="form-group">

            <div class="col-md-3">
                @Html.LabelFor(m => m.firstName)
                @Html.TextBoxFor(m => m.firstName, new { @class = "form-control", @placeholder = "Enter text.." })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.lastName)
                @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", @placeholder = "Enter text.." })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.companyName)
                @Html.TextBoxFor(m => m.companyName, new { @class = "form-control", @placeholder = "Enter text.." })
            </div>

            <div class="col-md-3">
                <label>&nbsp;</label>
                <div>
                    <input type="submit" class="btn btn-primary" value="@Pecuniaus.Resources.Common.AddNew" />
                </div>
            </div>
        </div>
    }
</div>


