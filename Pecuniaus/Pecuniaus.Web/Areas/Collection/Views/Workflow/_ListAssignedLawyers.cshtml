@model IEnumerable<Pecuniaus.Collection.Models.LawyerModel>
@using GridMvc.Html
@if (Model!= null)
{
    @Html.Grid(Model).Named("grdAssignedLawyers").Columns(columns =>
    {
        columns.Add(data => data.lawyerId, true);
        columns.Add(data => data.firstName).Titled(@Pecuniaus.Resources.Collection.Collection.FirstName).Sortable(true);
        columns.Add(data => data.lastName).Titled(@Pecuniaus.Resources.Collection.Collection.LastName).Sortable(true);
        columns.Add(data => data.companyName).Titled(@Pecuniaus.Resources.Collection.Collection.Company).Sortable(true);
        columns.Add(data => data.dateOfAssignment).Titled(@Pecuniaus.Resources.Collection.Collection.DateOfAssignment).Format("{0:d}").Sortable(true);
        columns.Add(data => data.documentType).Titled(@Pecuniaus.Resources.Collection.Collection.DocumentType).Sortable(true);
    }).WithPaging(5)
}