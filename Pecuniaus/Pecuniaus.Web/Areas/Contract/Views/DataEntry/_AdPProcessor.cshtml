@model Pecuniaus.Models.Contract.ProcessorModel
@{var isFormDisabled = Model.IsDisabled;}
<div id="dvNewProcessor">
    @using (Ajax.BeginForm("AddProcessor", null, new AjaxOptions
   {
       HttpMethod = "POST",
       InsertionMode = InsertionMode.Replace,
       UpdateTargetId = "dvNewProcessor",
       OnSuccess = "ProcessorUpdated()",
   }, new { @class = "form-horizontal form-bordered", role = "form" }))
    {
        @Html.ValidationSummary()


        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(m => m.ProcessorTypes)
                @Html.DropDownListFor(m => m.ProcessorTypeId, Model.ProcessorTypes, "", new { @class = "form-control", @data_placeholder = "Processor Compar" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.ProcessorNumber)
                @Html.TextBoxFor(m => m.ProcessorNumber, new { @class = "form-control", @placeholder = "Enter text.." })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.FirstProcessedDate)
                @Html.EditorFor(m => m.FirstProcessedDate)
            </div>

            <div class="col-md-3">
                <label>&nbsp;</label>
                <div class="pull-right">
                    <input type="submit" class="btn btn-primary" value="@Pecuniaus.Resources.Common.AddNew" @(isFormDisabled ? "disabled" : "") />
                </div>
            </div>
        </div>
    }
</div>
