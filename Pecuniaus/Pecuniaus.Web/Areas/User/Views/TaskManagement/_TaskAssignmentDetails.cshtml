@model IEnumerable<Pecuniaus.User.Models.TaskAssignmentDetailModel>
<div class="panel-body">
    <div class="form-group form-actions">
        <div class="col-xs-12">
            <div class="pull-right">
                @*@if (permissionsContacts.Edit)
                    {*@
                <button class="btn btn-primary" type="submit" name="submitButton" value="Update">@Pecuniaus.Resources.Common.Save</button>
                <button class=" btn btn-danger" type="submit" name="submitButton" value="Delete">@Pecuniaus.Resources.Common.Cancel</button>
                @*<button class="btn btn-danger" type="button">@Pecuniaus.Resources.Common.Edit</button>*@
                <br>
                <br>
                @*}*@
            </div>
        </div>
    </div>
    <div class="row">
        <div class="block top3head">
            <div class="row">
                <div class="col-md-12">
                    @*@Pecuniaus.Resources.User.TaskManagement.ActivityForMonth @Model[0].MonthName*@
                </div>
            </div>
            <br>
            <div class="table-responsive" style="overflow:auto !Important;">
                <table role="grid" class="table table-vcenter table-condensed table-bordered dataTable no-footer font-12" style="font-size:12px" id="tblContractActivity">
                    <thead>
                        <tr role="row">
                            <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.User.TaskManagement.UserName</th>
                            <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.User.TaskManagement.MerchantName</th>
                            <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.User.TaskManagement.TaskName</th>
                            <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.User.TaskManagement.StatusName</th>
                            <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.User.TaskManagement.AssignedDate</th>
                            <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.User.TaskManagement.AssignedTo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var modItem in Model)
                        {
                            <tr>
                                <td>@Html.HiddenFor(item => modItem.TaskID)@Html.DisplayFor(item => modItem.UserName)</td>
                                <td>@Html.DisplayFor(item => modItem.MerchantName)</td>
                                <td>@Html.DisplayFor(item => modItem.TaskName)</td>
                                <td>@Html.DisplayFor(item => modItem.StatusName)</td>
                                <td>@Html.DisplayFor(item => modItem.AssignedDate)</td>
                                <td>@Html.DropDownListFor(item => modItem.AssignToUserID, modItem.UserstoAssign, new { @class = "form-control", @placeholder = "Type of Entity", style = "width: 100%;" })</td>
</tr>
                        }
                    </tbody>
                </table>
                <br>
            </div>
            <!-- END Datatables Content -->
            <!-- All Boxes Content Start -->
        </div>
    </div>
</div>