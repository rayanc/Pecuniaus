@model Pecuniaus.MerchantProfile.Models.MPMerchantBusinessModel
@{
    var permissionsBusiness = Pecuniaus.UICore.SessionHelper.GetPagePermissionsByPage(Pecuniaus.UICore.Modules.MP_Business);
}
@using (Ajax.BeginForm("UpdateBusinessInfo", "Profile", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "details", InsertionMode = InsertionMode.Replace, OnSuccess = "FadeOutAlertMessage();" }, new { id = "frmMerchantBusiness" }))
{
    @Html.Partial("_PageMessage")
    @Html.ValidationSummary()
    <div class="panel-body">
        <div class="tophdrbuttons">
            <div class="row">
                <div class="pull-right">
                    @*@if (permissionsBusiness.Edit)
                    {*@
                        <button class="btn btn-primary" type="submit">@Pecuniaus.Resources.Common.Save</button>
                    @*}*@
                    <button class="btn btn-danger cancel" type="reset">@Pecuniaus.Resources.Common.Cancel</button>
                    <a href="#modal-notes" class="btn btn-sm btn-success enable-tooltip notesbtn" data-placement="bottom" data-toggle="modal" data-original-title="" title="">@Pecuniaus.Resources.Common.Notes</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="block full">
                    <legend><i class="fa fa-angle-right"></i> @Pecuniaus.Resources.Common.BusinessInformation</legend>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Business.nameOfCompany)
                                @Html.TextBoxFor(m => m.Business.nameOfCompany, new { @class = "form-control", @placeholder = "Business Name" })
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Business.nameOfBusiness)
                                @Html.TextBoxFor(m => m.Business.nameOfBusiness, new { @class = "form-control", @placeholder = "Name of the Business" })
                            </div>
                            @*<div class="col-md-2">
                                @Html.LabelFor(m => m.Business.businessStatus)
                                @Html.TextBoxFor(m => m.Business.businessStatus, new { @class = "form-control", @placeholder = "Business Status" })
                            </div>*@
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Business.entityTypeID)
                                @Html.DropDownListFor(m => m.Business.entityTypeID, Model.Business.EntityTypes, new { @class = "form-control", @placeholder = "Type of Entity", style = "width: 100%;" })
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Business.RNC)
                                @Html.TextBoxFor(m => m.Business.RNC, new { @class = "form-control", @placeholder = "RNC Number" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Business.businessStartDate)
                                @Html.EditorFor(m => m.Business.businessStartDate)
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Business.businessCCStartDate)
                                @Html.EditorFor(m => m.Business.businessCCStartDate)
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Business.industryTypeID)
                                @Html.DropDownListFor(m => m.Business.industryTypeID, Model.Business.IndustryTypes, new { @class = "form-control", @placeholder = "MCC Code", style = "width: 100%;" })
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.Business.affilliationNumber)
                                @Html.TextBoxFor(m => m.Business.affilliationNumber, new { @class = "form-control", @placeholder = "Affiliation Number" })
                            </div>
                        </div>
                        <div class="clearfix">
                            <br>
                        </div>
                        <legend><i class="fa fa-angle-right"></i> @Pecuniaus.Resources.Common.PhysicalAddress</legend>
                        <div class="form-group">
                            <div class="col-md-5">
                                @Html.LabelFor(m => m.PhysicalAddress.Address)
                                @Html.TextBoxFor(m => m.PhysicalAddress.Address, new { @class = "form-control", @placeholder = "Street 1, #483" })
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.PhysicalAddress.ProvinceID)
                                @Html.DropDownListFor(m => m.PhysicalAddress.ProvinceID, Model.PhysicalAddress.Provinces, new { @class = "form-control", @placeholder = "Province Name" })
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.PhysicalAddress.Phone1)
                                @Html.EditorFor(m => m.PhysicalAddress.Phone1)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.PhysicalAddress.Phone2)
                                @Html.EditorFor(m => m.PhysicalAddress.Phone2)
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.PhysicalAddress.Email)
                                @Html.TextBoxFor(m => m.PhysicalAddress.Email, new { @class = "form-control", @placeholder = "user@domain.com" })
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.PhysicalAddress.Fax)
                                @Html.TextBoxFor(m => m.PhysicalAddress.Fax, new { @class = "form-control", @placeholder = "(125) 548-1254" })
                            </div>
                        </div>
                        <div class="clearfix">
                            <br>
                        </div>
                        <legend><i class="fa fa-angle-right"></i> @Pecuniaus.Resources.Common.LegalAddress</legend>
                        <div class="form-group">
                            <div class="col-md-5">
                                @Html.LabelFor(m => m.LegalAddress.Address)
                                @Html.TextBoxFor(m => m.LegalAddress.Address, new { @class = "form-control", @placeholder = "Street 1, #483" })
                            </div>
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.LegalAddress.City)
                                @Html.TextBoxFor(m => m.LegalAddress.City, new { @class = "form-control", @placeholder = "City" })
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.LegalAddress.ProvinceID)
                                @Html.DropDownListFor(m => m.LegalAddress.ProvinceID, Model.LegalAddress.Provinces, new { @class = "form-control", @placeholder = "Province Name" })
                            </div>
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.LegalAddress.Phone1)
                                @Html.EditorFor(m => m.LegalAddress.Phone1)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.LegalAddress.Phone2)
                                @Html.EditorFor(m => m.LegalAddress.Phone2)
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.LegalAddress.Email)
                                @Html.TextBoxFor(m => m.LegalAddress.Email, new { @class = "form-control", @placeholder = "user@domain.com" })
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.LegalAddress.Fax)
                                @Html.TextBoxFor(m => m.LegalAddress.Fax, new { @class = "form-control", @placeholder = "(125) 548-1254" })
                            </div>
                        </div>
                        <div class="clearfix">
                            <br>
                        </div>
                        <div class="form-group">
                            <legend><i class="fa fa-angle-right"></i> @Pecuniaus.Resources.Common.ProcessorInformation</legend>
                            <table style="font-size:12px" class="table table-vcenter table-condensed table-bordered dataTable no-footer font-12" role="grid">
                                <thead>
                                    <tr role="row">
                                        @*@if (permissionsBusiness.Edit)
                                        {*@
                                            <th class="text-center sorting_disabled" rowspan="1" colspan="1" aria-sort="ascending">@Pecuniaus.Resources.Common.Edit</th>
                                        @*}*@
                                        <th class="" tabindex="0" aria-controls="example-datatable" rowspan="1" colspan="1">@Pecuniaus.Resources.MerchantProfile.Business.ProcessorTerminals</th>
                                        <th class="text-center sorting " rowspan="1" colspan="1" aria-label="Actions">@Pecuniaus.Resources.MerchantProfile.Business.ProcessorName</th>
                                        <th class="text-center" rowspan="1" colspan="1" aria-label="Actions">@Pecuniaus.Resources.MerchantProfile.Business.ProcessorNumber</th>
                                        <th class="text-center sorting" rowspan="1" colspan="1" aria-label="Actions">@Pecuniaus.Resources.MerchantProfile.Business.ProcessorPhoneNumber</th>
                                        <th class="" tabindex="0" aria-controls="example-datatable" rowspan="1" colspan="1">@Pecuniaus.Resources.MerchantProfile.Business.ProcessorIndustryType</th>
                                        <th class="" tabindex="0" aria-controls="example-datatable" rowspan="1" colspan="1">@Pecuniaus.Resources.MerchantProfile.Business.ProcessorFirstProcessedDate</th>
                                    </tr>
                                </thead>
                                @if (Model.Processor != null)
                                {
                                    foreach (var modItem in Model.Processor)
                                    {
                                        <tr>
                                            @*@if (permissionsBusiness.Edit)
                                            {*@
                                                <td><input type="radio" value="option1" name="example-checkbox1" id="example-checkbox1" onclick="EditProcessor('@modItem.processorId',$(this).closest('tr'));"></td>
                                            @*}*@
                                            <td id="tdTerminal">@Html.DisplayFor(item => modItem.Terminal)</td>
                                            <td id="tdProcessorName">@Html.DisplayFor(item => modItem.ProcessorName)</td>
                                            <td id="tdProcessorNumber">@Html.DisplayFor(item => modItem.ProcessorNumber)</td>
                                            <td id="tdProcessorPhoneNumber">@Html.DisplayFor(item => modItem.ProcessorPhoneNumber)</td>
                                            <td id="tdIndustryTypeID">@Html.HiddenFor(item => modItem.IndustryTypeID, new { id = "IndustryTypeID" })@Html.DisplayFor(item => modItem.IndustryType)</td>
                                            <td id="tdFirstProcessedDate">@Html.DisplayFor(item => modItem.FirstProcessedDate)@Html.HiddenFor(item => modItem.DateGracePeriod, new { id = "DateGracePeriod" })</td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                        <div class="form-group" id="divEditProcessor">
                        </div>
                        <div class="clearfix">
                            <br>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END Datatables Content -->
            <!-- All Boxes Content Start -->
        </div>
    </div>
}

