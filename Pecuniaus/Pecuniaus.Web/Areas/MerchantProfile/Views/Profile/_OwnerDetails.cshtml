@model Pecuniaus.MerchantProfile.Models.MPMerchantOwnerDetailModel
<div class="col-md-12">    
    @Html.HiddenFor(m => m.Owner.OwnerId)
    @Html.LabelFor(m => m.Owner.IsAuthorized)
    @Html.CheckBoxFor(m => m.Owner.IsAuthorized)
</div>
<form class="form-horizontal">
    <div class="form-group">
        <div class="col-md-6">
            @Html.LabelFor(m => m.Owner.FirstName)
            @Html.TextBoxFor(m => m.Owner.FirstName, new { @class = "form-control", @placeholder = "text here" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(m => m.Owner.LastName)
            @Html.TextBoxFor(m => m.Owner.LastName, new { @class = "form-control", @placeholder = "text here" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">            
            @Html.LabelFor(m => m.Owner.OwnerIdentification)
            @Html.TextBoxFor(m => m.Owner.OwnerIdentification, new { @class = "form-control", @placeholder = "text here" })
        </div>
        <div class="col-md-4">            
            @Html.LabelFor(m => m.Owner.DateofBirth)
            @Html.EditorFor(m => m.Owner.DateofBirth, new { @class = "form-control", @placeholder = "text here" })
        </div>
        <div class="col-md-4">            
            @Html.LabelFor(m => m.Owner.DateBecameOwner)
            @Html.EditorFor(m => m.Owner.DateBecameOwner, new { @class = "form-control", @placeholder = "text here" })
        </div>
    </div>
    <div class="clearfix">
        <br>
        <legend><i class="fa fa-angle-right"></i> Owner Address</legend>
        <div class="form-group">
            <div class="col-md-6">
                @Html.LabelFor(m => m.Address.Address)
                @Html.TextBoxFor(m => m.Address.Address, new { @class = "form-control", @placeholder = "text here" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.Address.City)
                @Html.TextBoxFor(m => m.Address.City, new { @class = "form-control", @placeholder = "text here" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.Address.ProvinceID)
                @Html.DropDownListFor(m => m.Address.ProvinceID, Model.Address.Provinces, new { @class = "form-control", @placeholder = "", style = "width: 100%;" })
            </div>
        </div>
        <div class="clearfix">
            <br>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(m => m.Address.Email)
                @Html.TextBoxFor(m => m.Address.Email, new { @class = "form-control", @placeholder = "text here" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.Address.Phone1)
                @Html.EditorFor(m => m.Address.Phone1)
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.Address.Cell)
                @Html.EditorFor(m => m.Address.Cell)
            </div>
            @if (Model.Owner.OwnerId == 0)
            {
                <div class="col-md-3">
                    <button class="btn btn-primary" type="submit" name="submitButton" value="Add">@Pecuniaus.Resources.Common.Add</button>
                </div>
            }
        </div>
    </div>
</form>
