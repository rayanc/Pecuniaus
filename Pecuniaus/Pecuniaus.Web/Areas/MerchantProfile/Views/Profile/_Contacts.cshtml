@model IEnumerable<Pecuniaus.MerchantProfile.Models.MPMerchantContactsModel>
@{
    var permissionsContacts = Pecuniaus.UICore.SessionHelper.GetPagePermissionsByPage(Pecuniaus.UICore.Modules.MP_Contacts);
}
@using (Ajax.BeginForm("ProcessContact", "Profile", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "faq2_q3", InsertionMode = InsertionMode.Replace, OnSuccess = "FadeOutAlertMessage();" }, new { id = "frmMerchantContacts" }))
{
    @Html.Partial("_PageMessage")
    @Html.ValidationSummary()
    <div class="panel-body">
        <div class="form-group form-actions">
            <div class="col-xs-12">
                <div class="pull-right">
                    @*@if (permissionsContacts.Edit)
                    {*@
                        <button class="btn btn-primary" type="button" value="Add" onclick="loadContactDetailstoAdd();">@Pecuniaus.Resources.Common.AddNew</button>
                        <button class="btn btn-primary" type="submit" name="submitButton" value="Update">@Pecuniaus.Resources.Common.Save</button>
                        <button class=" btn btn-danger" type="submit" name="submitButton" value="Delete">@Pecuniaus.Resources.Common.Delete</button>
                    @*<button class="btn btn-danger" type="button">@Pecuniaus.Resources.Common.Edit</button>*@
                    <br>
                    <br>
                    @*}*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="block full">
                    <div class="table-responsive">
                        <table role="grid" class="table table-vcenter table-condensed table-bordered dataTable no-footer font-12" style="font-size:12px">
                            <thead>
                                <tr role="row">
                                    @*@if (permissionsContacts.Edit)
                                    {*@
                                        <th aria-sort="ascending" colspan="1" rowspan="1" class="text-center sorting_disabled">@Pecuniaus.Resources.Common.Edit</th>
                                        <th aria-sort="ascending" colspan="1" rowspan="1" class="text-center sorting_disabled">@Pecuniaus.Resources.Common.Delete</th>
                                    @*}*@
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Contacts.FirstName</th>
                                <th aria-label="Actions" colspan="1" rowspan="1" class="text-center sorting">@Pecuniaus.Resources.MerchantProfile.Contacts.LastName</th>
                                <th aria-label="Actions" colspan="1" rowspan="1" class="text-center">@Pecuniaus.Resources.MerchantProfile.Contacts.Position</th>
                                <th aria-label="Actions" colspan="1" rowspan="1" class="text-center sorting">@Pecuniaus.Resources.MerchantProfile.Contacts.DateofBirth</th>
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Contacts.IsOwner</th>
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Contacts.OwnerIdentification</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var modItem in Model)
                            {
                                <tr>
                                    @*@if (permissionsContacts.Edit)
                                    {*@
                                        <td><input type="radio" id="example-checkbox1" name="example-checkbox1" value="option1" onclick="loadContactDetails(@Html.DisplayFor(Item => modItem.ContactId));"></td>
                                        <td><input type="checkbox" id="DeleteIt" name="DeleteIt" value="@Html.DisplayFor(Item => modItem.ContactId)"></td>
                                    @*}*@
                                    <td>@Html.DisplayFor(Item => modItem.FirstName)</td>
                                    <td>@Html.DisplayFor(Item => modItem.LastName)</td>
                                    <td>@Html.DisplayFor(Item => modItem.Position)</td>
                                    <td>@Html.DisplayFor(Item => modItem.DateofBirth)</td>
                                    <td>@Html.DisplayFor(Item => modItem.IsOwner)</td>
                                    <td>@Html.DisplayFor(Item => modItem.OwnerIdentification)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br>
                </div>
                <form class="form-horizontal">
                    <div id="contactdetails">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END Datatables Content -->
    <!-- All Boxes Content Start -->
</div>
}
