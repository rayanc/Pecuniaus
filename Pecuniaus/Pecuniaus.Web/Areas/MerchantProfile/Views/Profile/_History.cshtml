@model Pecuniaus.MerchantProfile.Models.MPMerchantHistoryDetailModel
@using (Ajax.BeginForm("ProcessHistory", "Profile", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "faq2_q9", InsertionMode = InsertionMode.Replace }, new { id = "frmMerchantHistory" }))
{
@Html.Partial("_PageMessage")
@Html.ValidationSummary()
    <div class="panel-body">
        <div class="row">
                    <div class="col-md-3">
                        @Pecuniaus.Resources.Common.From
                        @Html.EditorFor(m => m.HistoryStartDate)
                    </div>

                    <div class="col-md-3">
                        @Pecuniaus.Resources.Common.To
                        @Html.EditorFor(m => m.HistoryEndDate)
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-5" style="margin-top:17px;">
                        <div class="pull-right">
                            <button class="btn btn-primary" type="submit" name="submitButton" value="Search">@Pecuniaus.Resources.Common.Search</button>
                            @*<button class="btn btn-danger" type="button">@Pecuniaus.Resources.Common.Clear</button>*@
                            <a href="#modal-notes" class="btn btn-sm btn-success enable-tooltip notesbtn" data-placement="bottom" data-toggle="modal" data-original-title="" title="">@Pecuniaus.Resources.Common.Notes</a>
                        </div>
                    </div>
                <!-- END Datatables Content -->
                <!-- All Boxes Content Start -->
        </div>
        <div class="table-responsive" style="margin-top:30px;">
            <table style="font-size:12px" class="table table-vcenter table-condensed table-bordered dataTable no-footer font-12" role="grid">
                <thead>
                    <tr role="row">
                        <th class="sorting_disabled" rowspan="1" colspan="1" aria-sort="ascending">@Pecuniaus.Resources.MerchantProfile.History.Date</th>
                        <th class="sorting_disabled" rowspan="1" colspan="1" aria-sort="ascending">@Pecuniaus.Resources.MerchantProfile.History.Field</th>
                        <th class="sorting_disabled" rowspan="1" colspan="1" aria-sort="ascending">@Pecuniaus.Resources.MerchantProfile.History.OldValue</th>
                        <th class="sorting_disabled" rowspan="1" colspan="1" aria-sort="ascending">@Pecuniaus.Resources.MerchantProfile.History.NewValue</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var modItem in Model.HistoryDetail)
                    {
                        <tr>
                            <td>@Html.DisplayFor(item => modItem.HistoryDate)</td>
                            <td>@Html.DisplayFor(item => modItem.Field)</td>
                            <td>@Html.DisplayFor(item => modItem.OldValue)</td>
                            <td>@Html.DisplayFor(item => modItem.NewValue)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
