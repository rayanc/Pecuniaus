@model Pecuniaus.MerchantProfile.Models.MPMerchantContactDetailModel
@{ this.ViewContext.FormContext = new FormContext(); }
    <div class="form-group">
        <div class="col-md-6">
            @Html.HiddenFor(m => m.Contact.ContactId)
            @Html.LabelFor(m => m.Contact.FirstName)
            @Html.TextBoxFor(m => m.Contact.FirstName, new { @class = "form-control", @placeholder = "text here" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(m => m.Contact.LastName)
            @Html.TextBoxFor(m => m.Contact.LastName, new { @class = "form-control", @placeholder = "text here" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Contact.OwnerIdentification)
            @Html.TextBoxFor(m => m.Contact.OwnerIdentification, new { @class = "form-control", @placeholder = "text here" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.Contact.DateofBirth)
            @Html.EditorFor(m => m.Contact.DateofBirth, new { @class = "form-control", @placeholder = "text here" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.Contact.Position)
            @Html.TextBoxFor(m => m.Contact.Position, new { @class = "form-control", @placeholder = "text here" })
        </div>
    </div>
    <div class="clearfix">
        <br>
    </div>
    <legend><i class="fa fa-angle-right"></i> Contact Address</legend>
    <div class="form-group">
        <div class="col-md-6">
            @Html.LabelFor(m => m.Address.Address)
            @Html.TextBoxFor(m => m.Address.Address, new { @class = "form-control", @placeholder = "text here" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.Address.City)
            @Html.TextBoxFor(m => m.Address.City, new { @class = "form-control", @placeholder = "text here" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.Address.ProvinceID)
            @Html.DropDownListFor(m => m.Address.ProvinceID, Model.Address.Provinces, new { @class = "form-control", @placeholder = "", style = "width: 100%;" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m => m.Address.Email)
            @Html.TextBoxFor(m => m.Address.Email, new { @class = "form-control", @placeholder = "text here" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.Address.Phone1)
            @Html.EditorFor(m => m.Address.Phone1)
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.Address.Cell)
            @Html.EditorFor(m => m.Address.Cell)
        </div>
        @if (Model.Contact.ContactId == 0)
    {
            <div class="col-md-3">
                <button class="btn btn-primary" type="submit" name="submitButton" value="Add">@Pecuniaus.Resources.Common.Add</button>
            </div>
    }
    </div>

