@model Pecuniaus.MerchantProfile.Models.MPScanDocumentModel
@using (Ajax.BeginForm("SaveUploadedDocument", "Profile", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "faq2_q6" }, new { id = "frmScanDoc", enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
@Html.Partial("_PageMessage")
@Html.ValidationSummary()
    <div class="row">
    <div class="col-md-12">
        <div class="block full">
            <div class="block-title">
                <h2><strong>@Pecuniaus.Resources.Common.Upload</strong> @Pecuniaus.Resources.Common.Documents</h2>
            </div>

            <div class="row">
                <div class="widget-simple">
                    <div class="pull-left">
                        @Html.DropDownListFor(m => m.DocumentTypeID, Model.DocumentTypes, "", new { @class = "form-control docType", @style = "width: 100%;", @data_placeholder = "Document Type" })
                    </div>
                    <div class="pull-right">
                        <input type="file" name="file" id="file" class="btn btn-success" onchange="showimagepreview(this)" />
                        <button value="Save" name="submitButton" type="submit" class="btn btn-primary">@Pecuniaus.Resources.Common.Save</button>
                        @*<button type="button" class="btn btn-success" >Browse File</button>*@
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="widget-simple">
                    @*<div class="progress progress-striped">
                            <div class="progress-bar progress-bar-success">0%</div>
                        </div>*@


                    <div class="progress progress-striped active">
                        <div aria-valuemax="100" aria-valuemin="0" id="barUpload" role="progressbar" class="progress-bar progress-bar-success"></div>
                    </div>
                    @*<div id="status">Status </div>*@

                    <div class="widget-simple"> <img id="imgprvw" class="img-responsive greenBorder img-thumbnail" src="/ScanDocuments/NoImage.jpg" alt="Uploaded image preview"> </div>
                </div>
            </div>
            <div class="row">
            </div>

        </div>
    </div>
</div>
}
