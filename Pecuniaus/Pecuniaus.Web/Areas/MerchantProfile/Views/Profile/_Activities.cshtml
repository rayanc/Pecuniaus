@model Pecuniaus.MerchantProfile.Models.MPMerchantActivityDetailModel
@using (Ajax.BeginForm("ProcessActivities", "Profile", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "faq2_q7" }, new { id = "frmMerchantActivity" }))
{
@Html.Partial("_PageMessage")
@Html.ValidationSummary()
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="col-xs-12">
                    <div class="pull-right">
                        <button class="btn btn-primary" type="submit" name="submitButton" value="Search">@Pecuniaus.Resources.Common.Search</button>
                        @*<button class="btn btn-primary" type="reset">@Pecuniaus.Resources.Common.Clear</button>*@
                        <a href="#modal-notes" class="btn btn-sm btn-success enable-tooltip notesbtn" data-placement="bottom" data-toggle="modal" data-original-title="" title="">@Pecuniaus.Resources.Common.Notes</a>
                        @*<a class="btn btn-sm btn-success enable-tooltip notesbtn" data-placement="bottom" data-toggle="modal" href="#modal-searchpopup" data-original-title="" title="">Notes</a>*@
                        <br>
                        <br>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.ProcessorTypeId)
                        @Html.DropDownListFor(m => m.ProcessorTypeId, Model.Processors, new { @class = "form-control", @placeholder = "Visa Net", style = "width: 100%;" })
                    </div>
                    <div class="col-md-2">
                        @*Processor No*@
                        @Html.LabelFor(m => m.ProcessorNumber)
                        @Html.TextBoxFor(m => m.ProcessorNumber, new { @class = "form-control", @placeholder = "" })
                    </div>
                    <div class="col-md-2">
                        <b>@Pecuniaus.Resources.Common.From</b>
                        @Html.EditorFor(m => m.ActivityFrom)
                    </div>
                    <div class="col-md-2">
                        <b>@Pecuniaus.Resources.Common.To</b>
                        @Html.EditorFor(m => m.ActivityTo)
                    </div>

                </div>
                <!-- END Datatables Content -->
                <!-- All Boxes Content Start --> <br>
                <div class="table-responsive">
                    <table role="grid" class="table table-vcenter table-condensed table-bordered dataTable no-footer font-12" style="font-size:12px">
                        <thead>
                            <tr role="row">
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Activities.Month</th>
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Activities.Processor</th>
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Activities.Retention</th>
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Activities.Total</th>
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Activities.Price</th>
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Activities.Capital</th>
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Activities.IncomeThroughProcessor</th>
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Activities.OtherIncome</th>
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Activities.TypeOfActivity</th>
                                <th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Activities.Contact</th>
                                @*<th colspan="1" rowspan="1" aria-controls="example-datatable" tabindex="0" class="">@Pecuniaus.Resources.MerchantProfile.Activities.Note</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var modItem in Model.ActivityDetail)
{
    <tr>
        <td><a href="#modal-sf-listMPActivities" data-toggle="modal" data-placement="bottom" onclick="ShowActivityDetails(@Html.DisplayFor(item => modItem.ProcessorId),@Convert.ToString(Html.DisplayFor(item => modItem.MonthName)).Split('/')[0],@Convert.ToString(Html.DisplayFor(item => modItem.MonthName)).Split('/')[1])">@Html.DisplayFor(item => modItem.MonthName)</a></td>
        <td>@Html.DisplayFor(item => modItem.ProcessorName)</td>
        <td>@Html.DisplayFor(item => modItem.RetentionPercentage)%</td>
        <td>@Html.DisplayFor(item => modItem.Total)</td>
        <td>@Html.DisplayFor(item => modItem.Price)</td>
        <td>@Html.DisplayFor(item => modItem.Capital)</td>
        <td>@Html.DisplayFor(item => modItem.ProcessorIncome)</td>
        <td>@Html.DisplayFor(item => modItem.OtherIncome)</td>
        <td>@Html.DisplayFor(item => modItem.TypeofActivity)</td>
        <td>@Html.DisplayFor(item => modItem.Contract)</td>
        @*<td>@Html.DisplayFor(item => modItem.Note)</td>*@
    </tr>
}
                        </tbody>
                    </table>
                    <br>
                </div>
            </div>

            <!-- END Datatables Content -->
            <!-- All Boxes Content Start -->
        </div>
    </div>
}