@model Pecuniaus.Web.Models.CollectionLandLordModel
@using (Ajax.BeginForm("UpdateLandlord", "Collection", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "page-content" }))
{
    Layout = "~/Views/Shared/_Layout.cshtml";

<div id="page-content" style="min-height: 516px;">
    <div class="content-header">
        <div class="header-section">
            <div class="row">
                <div class="col-md-3">
                    <label for="example-nf-email">Merchant : </label>
                </div>
                <div class="col-md-3">
                    <label for="example-nf-email">Merchant Id : </label>
                </div>
                <div class="col-md-6">
                    <div class="pull-right">
                        <button type="button" class="btn btn-danger">Save</button>
                        <button type="button" class="btn btn-primary">Return to collection Screen</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-lg-6 hidden-sm">
                    <h1>Landlord</h1>
                </div>
            </div>
        </div>
    </div>
    <ul class="breadcrumb breadcrumb-top">
        <li>Home</li>
        <li>Collectioin Workflow</li>
        <li><a href="">Landlord</a></li>
    </ul>
    <div id="divFAQ" class="content-header tophdrbuttons">
        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-md-3">
                    Type of Property
                    @*<input type="text" class="form-control" placeholder="Business Name">*@
                    @Html.TextBoxFor(m => m.TypeofProperty, new { @class = "form-control", @placeholder = "Type of Property" })
                </div>
                <div class="col-md-3">
                    Landlord Company Name
                    @*<input type="text" class="form-control" placeholder="Company Name">*@
                    @Html.TextBoxFor(m => m.LandlordCompanyName, new { @class = "form-control", @placeholder = "Landlord Company Name" })
                </div>
                <div class="col-md-2">
                    Landlord Name
                    @*<input type="text" class="form-control" placeholder="Landlord Name">*@
                    @Html.TextBoxFor(m => m.LandlordName, new { @class = "form-control", @placeholder = "Landlord Name" })
                </div>
                <div class="col-md-2">
                    Monthly Rent Amount
                    @*<input type="text" class="form-control" placeholder="Rented Amount">*@
                    @Html.TextBoxFor(m => m.MonthlyRentAmount, new { @class = "form-control", @placeholder = "Monthly Rented Amount" })
                </div>
                <div style="margin-top:23px;" class="col-md-2">

                    <input type="checkbox" id="example-checkbox1" name="example-checkbox1" value="option1">

                    Call The Landlord
                </div>
            </div>
            <div class="clearfix">
                <br>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    Address
                    @*<input type="text" class="form-control" placeholder="Street 1, #483">*@
                    @Html.TextBoxFor(m => m.LandlordAddress.Address, new { @class = "form-control", @placeholder = "123 Stree, dummy landmark number" })
                </div>
                <div class="col-md-2">
                    City
                    @*<input type="text" class="form-control" placeholder="Province Name">*@
                    @Html.TextBoxFor(m => m.LandlordAddress.Address, new { @class = "form-control", @placeholder = "Province Name" })
                </div>
                <div class="col-md-3">
                    Email *:
                    @*<input type="text" class="form-control" placeholder="user@domain.com">*@
                    @Html.TextBoxFor(m => m.LandlordAddress.Email, new { @class = "form-control", @placeholder = "user@domain.com" })
                </div>
                <div class="col-md-2">
                    Telephone 1*:
                    @*<input type="text" class="form-control" placeholder="(125) 548-1254">*@
                    @Html.TextBoxFor(m => m.LandlordAddress.Phone1, new { @class = "form-control", @placeholder = "(345) 548- 9875" })
                </div>
                <div class="col-md-2">
                    Cell *:
                    @*<input type="text" class="form-control" placeholder="(125) 548-1254">*@
                    @Html.TextBoxFor(m => m.LandlordAddress.Cell, new { @class = "form-control", @placeholder = "(345) 548- 9875" })
                </div>
            </div>
        </form>
        <br>
        <div class="row">
            <div class="col-md-12">
                <div class="block full">
                    <div class="block-title">
                        <h2><strong>Landlord </strong>Experiance</h2>
                    </div>
                    <div class="table-responsive">
                        <table cellspacing="0" cellpadding="0" width="100%" border="0">
                            <tbody>
                                <tr>
                                    <td width="4%" height="26"><strong>Yes</strong></td>
                                    <td width="4%"><strong>No</strong></td>
                                    <td width="92%"><strong>Landlord Script</strong></td>
                                </tr>
                               
                                <tr>
                                    <td height="26"><input type="radio" value="radio" id="radio" name="radio"></td>
                                    <td><input type="radio" value="radio" id="radio2" name="radio"></td>
                                    <td>Landlord script goes in here quetions will be answerd by Landlord contact about the merchant</td>
                                </tr>
                                @foreach (var modItem in Model.Questions)
                                {
                                    <tr>
                                        <td height="26"><input type="radio" value="radio" id="radio" name="radio"></td>
                                        <td height="26"><input type="radio" value="radio" id="radio" name="radio"></td>
                                        <td>@Html.DisplayFor(item => modItem.Question)</td>
                                        <td>@Html.DisplayFor(item => modItem.Answer)</td>
                                    </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- END Datatables Content -->
            <!-- All Boxes Content Start -->
        </div>
    </div>
    <!-- Datatables Content -->
    <!-- END Datatables Content -->
    <!-- All Boxes Content Start -->
</div>

}