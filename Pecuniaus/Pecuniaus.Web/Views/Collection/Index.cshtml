    <div class="row">
        <div class="col-md-6">
            <!-- Widget -->
            <div class="widget">
                <div class="widget-extra blue_bg">
                    <h3 class="widget-content-light">@Pecuniaus.Resources.Common.Contract <strong>@Pecuniaus.Resources.Common.Information</strong></h3>
                </div>
                <div class="widget-simple">
                    <h4><strong>@Pecuniaus.Resources.Collection.Collection.CollectionState:</strong></h4>
                   
   <div class="col-md-6">
            <address>
               
                <strong>Merchant I: </strong> @ViewBag.ContractInformation.MerchantName<br>
                <strong>Contract II: </strong>>@ViewBag.ContractInformation.Contract<br>
                <strong>Funding Data:</strong> @ViewBag.ContractInformation.FundingDate <br>
                <strong>Monthly Average:</strong> @ViewBag.ContractInformation.MonthlyAverage<br>
                <strong>CC volumne used in offers:</strong> @ViewBag.ContractInformation.CCVolumeUsed<br>
