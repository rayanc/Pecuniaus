@{
    ViewBag.Title = "Collection Workflow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/scriptsbundle")
<div id="page-content" style="min-height: 516px;">
    <div class="content-header">
