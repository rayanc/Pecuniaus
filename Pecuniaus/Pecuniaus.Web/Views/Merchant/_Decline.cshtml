@model Pecuniaus.Web.Models.DeclineModel
<div id="dvDeclineReason">

    @using (Ajax.BeginForm("Decline", null, new AjaxOptions
   {
       HttpMethod = "POST",
   //    InsertionMode = InsertionMode.Replace,
     //  UpdateTargetId = "dvDeclineReason",
       OnSuccess = "window.location=window.location",
   }, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.ValidationSummary()

        @Html.HiddenFor(m => m.merchantId)
        @Html.HiddenFor(m => m.ContractID)

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(m => m.DeclineReasonId)
                @Html.DropDownListFor(model => model.DeclineReasonId, new SelectList(Model.DeclineReasons, "keyId", "description"), null,
                 new { id = "sTaskStatus", @data_placeholder = "Decline Reason", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(m => m.DeclineNotes)
                @Html.TextAreaFor(m => m.DeclineNotes, new { @class = "form-control", @placeholder = "Enter text.." })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <div class="checkbox">
                    @*<label>
                            <input type="checkbox"> Check me out
                        </label>*@
                    @Html.CheckBoxFor(m => m.IsReEvaluvate, new { style = "margin-left:0px" })
                    @Html.LabelFor(m => m.IsReEvaluvate)
                </div>
            </div>
        </div>
        <div class="row form-actions">
            <div class="col-xs-12 text-right">
                <input type="submit" class="btn btn-sm btn-primary" value="Add" />
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>

    }
</div>
