@model IEnumerable<Pecuniaus.Web.Models.MerchantsDetail>
@{
    ViewBag.Title = "Pecuniaus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html class="no-js">
<head>

    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>


    <meta charset="utf-8">
    <title>Pecuniaus</title>
    <meta name="description" content="Pecuniaus">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1.0">

    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/plugins.css">
    <link rel="stylesheet" href="~/Content/main.css">


    <script src="~/Scripts/vendor/modernizr-2.7.1-respond-1.4.2.min.js"></script>





</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <div class="block full">
                <div class="block">
                    <div class="block-title">
                        <h2><strong>List of merchants qualifying for renewals </strong></h2>
                    </div>

                    <div class="pull-right">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="example-input-small" class="col-sm-6 control-label">Merchant ID/Name</label>
                                <div class="col-sm-6">
                                    <input type="text" placeholder="search" class="form-control input-sm">
                                </div>
                            </div>
                        </form>
                    </div>
                    <table role="grid" class="table table-condensed table-bordered dataTable no-footer font-12" style="font-size: 12px">
                        @{
                            if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                    <table style="border: 1px solid; border-color: #dbe1e8">
                                        <tr>
                                            <td>
                                                <span class="txt_headr_tr">Merchant Name: </span>
                                            </td>
                                            <td>
                                                <span class="txt_ellip">@Html.DisplayFor(modelItem => item.merchantName)</span>
                                            </td>
                                            <td>
                                                <span class="txt_headr_tr">Task Name:</span></td>
                                            <td>
                                                <span class="txt_ellip">@Html.DisplayFor(modelItem => item.taskName)</span>
                                            </td>
                                            <td>

                                                <span class="txt_headr_tr">Loaned Amount:</span></td>
                                            <td><span class="txt_ellip">@Html.DisplayFor(modelItem => item.loanamount)</span>

                                            </td>
                                            <td>

                                                <span class="txt_headr_tr">Funded Date:</span></td>
                                            <td><span class="txt_ellip">@Html.DisplayFor(modelItem => item.fundedDate)</span>

                                            </td>
                                            <td>

                                                <span class="txt_headr_tr">Expected Turn:</span></td>
                                            <td><span class="txt_ellip">@Html.DisplayFor(modelItem => item.expectedturn)</span>

                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                <address>
                                                    <span class="txt_headr_tr">Merchant ID: </span>
                                                    <span class="txt_tr">@Html.DisplayFor(modelItem => item.merchantId)</span>
                                                </address>
                                            </td>
                                            <td>
                                                <address>
                                                    <span class="txt_headr_tr">Task Status:</span>
                                                    <span class="txt_tr">@Html.DisplayFor(modelItem => item.taskstatus)</span>
                                                </address>
                                            </td>
                                            <td>
                                                <address>
                                                    <span class="txt_headr_tr">Owned Amount:</span>
                                                    <span class="txt_tr">@Html.DisplayFor(modelItem => item.ownedAmount)</span>
                                                </address>
                                            </td>
                                            <td>
                                                <address>
                                                    <span class="txt_headr_tr">Paid%age:</span>
                                                    <span class="txt_tr">@Html.DisplayFor(modelItem => item.paidpercent)</span>
                                                </address>
                                            </td>
                                            <td>
                                                <address>
                                                    <span class="txt_headr_tr">Actual Turn:</span>
                                                    <span class="txt_tr">@Html.DisplayFor(modelItem => item.actualturn)</span>
                                                </address>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                <address>
                                                    <span class="txt_headr_tr">Ever in Collection: </span>
                                                    <span class="txt_tr">@Html.DisplayFor(modelItem => item.everInCollection)</span>
                                                </address>
                                            </td>
                                            <td>
                                                <address>
                                                    <span class="txt_headr_tr">Merchant Status:</span>
                                                    <span class="txt_tr">@Html.DisplayFor(modelItem => item.merchantStatus)</span>
                                                </address>
                                            </td>
                                            <td>
                                                <address>
                                                    <span class="txt_headr_tr">Paid Amount:</span>
                                                    <span class="txt_tr">@Html.DisplayFor(modelItem => item.paidamount)</span>
                                                </address>
                                            </td>
                                            <td class="txt_headr_tr" colspan="4">
                                                <button type="button" class="btn btn-xs btn-primary">Details</button>
                                                <button type="button" class="btn btn-xs btn-primary">Complete</button>
                                                @*<a class="btn btn-xs btn-success enable-tooltip sflistbtn" data-placement="bottom" data-toggle="modal" data-original-title="" title="">Snooze</a>*@
                                                <button id="btnsnooze" type="button" class="btn btn-xs btn-success enable-tooltip sflistbtn">Snooze</button>

                                                <button type="button" class="btn btn-xs btn-warning">Cancel</button>
                                                <button type="button" class="btn btn-xs btn-danger">Decline</button>
                                            </td>
                                        </tr>

                                    </table>
                                </td>
                            </tr>
                                }
                            }
                        }
                    </table>
                    <br>
                </div>
            </div>
        </div>
    </div>


    <div id="editForm"></div>


    <script src="~/Scripts/vendor/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/pages/tablesDatatables.js"></script>
    <script>$(function () { TablesDatatables.init(); });</script>
</body>
</html>

<script type="text/javascript">


    $(document).ready(function () {

        $("#editForm").dialog({
            autoOpen: false,
            modal: true,
            width: 450,
            title: "Snooze Renewal"
        });

        $('#btnsnooze').click(function () {
            $("#editForm").dialog({
                autoOpen: true,
                position: { my: "center", at: "top+350", of: window },
                width: 400,
                height: 300,
                resizable: false,
                title: 'Snooze Renewal',
                modal: true,
                open: function () {
                    $(this).load('@Url.Action("Snooze", "Merchant")');
                }
            });
            return false;
        });



    });

</script>
